<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_exit_play_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:minHeight="120dp"
        android:minWidth="120dp"
        android:padding="20dp"
        tools:src="@drawable/btn_back_penalty" />

    <RelativeLayout
        android:id="@+id/game_ranking_overlay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/game_overlay_bottom_bar_background"
        android:minHeight="@dimen/game_overlay_bottom_bar_height"
        android:padding="1dp"></RelativeLayout>
</RelativeLayout>